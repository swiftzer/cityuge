# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file and default charset
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.php]
indent_style = space
indent_size = 4

[*.{css,less,sass,scss,html,blade.php}]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or .travis.yml
[{composer.json,package.json,.travis.yml}]
indent_style = space
indent_size = 2
